/******** [START] Place order JavaScript ********/
table{
	width:800px; 
	text-align:center;
	border-collapse:collapse;
	margin-top:150px;
	margin-left:300px;
}
td,th{border:1px solid black}
td[colspan="3"]{text-align:right;}

.order{
	margin:80px 10px 0px 200px;
	width:400px; 
	float:left;
    border-collapse: collapse;
}

table,table tr th, table tr td { border:1px solid #ddd; }

.info{
	width:100%;
	margin:10px 200px 0px 0px;
	float:left;
	border:1px solid #ddd;
	padding:10px;
}



/******** DIV table ********/
.orderTable {
    	display: table;
    	width: 100%;
}
.orderTableRow {
    	display: table-row;
}
.orderTableRowAmt {
    	display: table-row;
    	text-align: right;
}
.orderTableHeading {
    	display: table-header-group;
    	background-color: #ddd;
}
.orderTableCell, .orderTableHead {
    	display: table-cell;
    	padding: 3px 10px;
    	border: 1px solid #999999;
}
.orderTableCellAmt {
    	display: table-cell;
    	padding: 3px 10px;
    	border: 1px solid #999999;
    	text-align: right;
}
.orderTableHeading {
    	display: table-header-group;
    	background-color: #ddd;
    	font-weight: bold;
}
.orderTableFoot {
    	display: table-footer-group;
    	font-weight: bold;
    	background-color: #ddd;
}
.orderTableBody {
    	display: table-row-group;
}
/******** DIV table ********/		



input.cart_input[type=submit] {
	width: 20%;
	margin-bottom: 2.5em;
}

label.cart_label {
	text-align: right;
	margin-right: 0.5em;
	font-weight:bold;
}

label.cart_label2 {
	text-align: right;
	margin-right: 0.5em;
}

label.cart_label3 {
	text-align: right;
	margin-left: 1.0em;
	text-decoration: underline;
}		
/******** [END] Place order JavaScript ********/