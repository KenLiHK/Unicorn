body{
	margin:0px;
	padding:0px;
}
/* ËÑË÷ÈÝÆ÷ */
.search_container{
	display:block; 
	width: 446px; 
	height: 46px; 
	background-color: #1ca99c; 
	font: 12px/1.5 tahoma, arial, sans-serif; 
	float: left;
	padding: 3px;
}

/* ËÑË÷ÁÐ±í categories */
.search_list{
	float: left; 
	width: 98px; 
	height: 38px; 
	overflow: hidden; 
	background: #fff; 
	border: 1px solid #f6f6f6; 	
	text-align: center;
}
.search_list ul{
	list-style: none; 
	margin: 0px; 
	padding: 0px; 
	display: block;
}
.search_list ul li{	
	font-size: 14px; 
	height: 39px; 
	line-height: 39px; 
	border: none;
	cursor: pointer; 
	text-decoration: none; 
	display: block; 
	overflow: hidden;
}
.search_list ul li a{text-decoration: none; color: #6c6c6c;}
.search_list ul li:hover{background-color: #e5e5e5;}
.sb_selected{background: #f6f6f6;}
.trigger_hover{height: auto;}

/* ËÑË÷¿òºÍ°´Å¥ */
form{float: left;}
.search_text{
	border: 0px; 
	width: 300px; 
	height: 40px; 
	line-height: :38px; 
	font-size: 20px; 
	float: left; 
	outline: none; 
	padding-left:3px;
}
.search_button{
	border: 0px; 
	background-image: url(search.jpg); 
	cursor: pointer; 
	width: 40px; 
	height: 40px; 
	line-height: 40px; 
	float: left; 
	outline: none;
}
		
